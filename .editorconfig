root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{py,sh,md}]
indent_style = space
indent_size = 4

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,css,html}]
indent_style = space
indent_size = 2

[*.{rst,txt}]
indent_style = space
indent_size = 4
max_line_length = 80

[Makefile]
indent_style = tab
