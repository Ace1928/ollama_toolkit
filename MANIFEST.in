# Include necessary package files
include README.md
include LICENSE
include pyproject.toml
include setup.py
include setup.cfg
include version.py
include *.py
recursive-include ollama_forge *.py *.json *.yaml
recursive-include helpers *.py
recursive-include tests *.py
recursive-include examples *.py
recursive-include docs *.md *.rst *.html *.txt *.py

# Documentation
include docs/requirements.txt
include .readthedocs.yaml

# Development configuration
include .editorconfig

# Exclude developer-specific files
exclude .gitignore
exclude .git*
exclude .pypirc
exclude publish_to_pypi.sh
exclude publish.py
exclude build_docs.sh
exclude .coverage
exclude .pytest_cache
exclude .mypy_cache
exclude .vscode
exclude .idea
recursive-exclude __pycache__ *
recursive-exclude *.egg-info *
recursive-exclude dist *
recursive-exclude build *
